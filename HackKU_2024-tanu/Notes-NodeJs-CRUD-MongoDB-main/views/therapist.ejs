const axios = require('axios');

// Local server URL
const API_URL = 'http://localhost:5000/api/messages';  // Adjust the path as needed

async function sendMessage(model, system, messages) {
    try {
        const response = await axios.post(API_URL, {
            model: model,
            max_tokens: 1000,
            temperature: 0.0,
            system: system,
            messages: messages,
        }, {
            headers: {
                'Content-Type': 'application/json'
            }
        });

        return response.data;
    } catch (error) {
        console.error('Error calling the local API:', error);
        return null;
    }
}

